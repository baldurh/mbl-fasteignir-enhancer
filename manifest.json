{
  "name": "Mbl fasteignir - viðbætur",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "Reiknar út og birtir fermetraverð við hverja niðurstöðu í fasteignaleit mbl.is",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://www.mbl.is/fasteignir/*"
      ],
      "js": [
        "js/jquery.min.js",
        "src/common.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.mbl.is/fasteignir/",
        "http://www.mbl.is/fasteignir/leit/*"
      ],
      "js": [
        "src/search-form.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.mbl.is/fasteignir/leit/*"
      ],
      "js": [
        "src/leit.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.mbl.is/fasteignir/fasteign/*"
      ],
      "js": [
        "src/fasteign.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "http://www.mbl.is/fasteignir/kortaleit/*"
      ],
      "js": [
        "src/kort.js"
      ],
      "run_at": "document_end"
    }
  ]
}
